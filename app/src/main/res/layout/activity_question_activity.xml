<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_partie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_question"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/AppTheme"
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <com.example.iit.quizzproject.widget.CanaroTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/question"
            android:textSize="@dimen/question_item_text_size" />
    </android.support.v7.widget.Toolbar>

    <ProgressBar
        android:id="@+id/circularProgressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/AppTheme"
        android:layout_centerHorizontal="true"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/circular" />

    <Button
        android:id="@+id/langue"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="70dp"
        android:text="ENG"
        android:background="@drawable/circle_button_next"
        android:textColor="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/circularProgressbar"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="10"
            android:orientation="vertical"
            android:rowCount="1">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/question1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="15dp"
                android:layout_row="0"
                android:background="@drawable/circle_question" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/question2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:layout_row="0"
                android:background="@drawable/circle_question" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/question3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:layout_row="0"
                android:background="@drawable/circle_question" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/question4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_column="3"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:layout_row="0"
                android:background="@drawable/circle_question" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/question5"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_column="4"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:layout_row="0"
                android:background="@drawable/circle_question" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/question6"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_column="5"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:layout_row="0"
                android:background="@drawable/circle_question" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/question7"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_column="6"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:layout_row="0"
                android:background="@drawable/circle_question" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/question8"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_column="7"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:layout_row="0"
                android:background="@drawable/circle_question" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/question9"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_column="8"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:layout_row="0"
                android:background="@drawable/circle_question" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/question10"
                android:layout_width="18dp"
                android:layout_height="18dp"

                android:layout_column="9"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="15dp"
                android:layout_row="0"
                android:background="@drawable/circle_question" />
        </GridLayout>

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>

