<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/content_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/guillotine_background_dark"
                android:orientation="vertical"
                tools:context=".TestActivity"
    >

    <RelativeLayout

        android:id="@+id/relative_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/me"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="2dp"/>


        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="66.67sp"
            android:layout_toRightOf="@+id/circle"
            android:gravity="center"
            android:text="Ahmed"
            android:textColor="@color/colorWhite"
            android:textSize="22.22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/last_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.11sp"
            android:layout_marginTop="66.67sp"
            android:layout_toRightOf="@+id/name_text"
            android:gravity="center"
            android:text="Damak"
            android:textColor="@color/colorWhite"
            android:textSize="22.22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/level_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_text"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="22.22sp"
            android:layout_toRightOf="@+id/circle"
            android:gravity="center"
            android:text="Level : 1"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_child"
        android:background="@color/guillotine_background_dark"
        android:gravity="center"
        android:measureWithLargestChild="true"
        android:orientation="horizontal"

        tools:context="viralandroid.com.androidlistviewwithimageandtext.ListViewWithImageAndText">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/wins"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="111.11sp"
            android:layout_height="77.78sp"
            android:layout_below="@+id/relative_child"
            android:layout_marginLeft="4.44sp"

            android:layout_marginTop="11.11sp"

            android:text="Win : 100"
            android:textColor="@color/colorWhite"
            android:textSize="15.56sp"
            android:textStyle="bold"/>

        <!--  android:theme=”CustomAccentOverlay”-->

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/freinds"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="155.56sp"
            android:layout_height="77.78sp"
            android:layout_below="@id/relative_child"
            android:layout_marginLeft="4.44sp"

            android:layout_marginTop="11.11sp"
            android:layout_toRightOf="@+id/wins"

            android:text="Freinds : 100"
            android:textColor="@color/colorWhite"
            android:textSize="15.56sp"
            android:textStyle="bold"/>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/rank"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="111.11sp"
            android:layout_height="77.78sp"
            android:layout_below="@+id/relative_child"
            android:layout_marginLeft="4.44sp"
            android:layout_marginRight="4.44sp"
            android:layout_marginTop="11.11sp"
            android:layout_toRightOf="@+id/freinds"

            android:clickable="true"
            android:text="Rank : 500"
            android:textColor="@color/colorWhite"
            android:textSize="15.56sp"
            android:textStyle="bold"

            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/linear_layout"
        >


        <ListView
            android:id="@+id/list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            ></ListView>


    </RelativeLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        >

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/play"

            style="@style/ButtonTransparant"
            android:layout_width="match_parent"


            android:layout_height="50dp"

            android:layout_alignParentBottom="true"

            android:layout_below="@+id/list_view"

            android:gravity="center"
            android:text="Play"
            android:textColor="@color/guillotine_background"
            android:textSize="25dp"
            android:textStyle="bold"


            />
    </android.support.v7.widget.LinearLayoutCompat>
</RelativeLayout>