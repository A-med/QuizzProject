<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background_dark"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/me"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="2dp"/>


    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/circle"
        android:gravity="center"
        android:text="Ahmed"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/profile_name_text_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/last_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/name_text"
        android:layout_marginLeft="5pt"
        android:layout_toRightOf="@+id/name_text"
        android:gravity="center"
        android:text="Damak"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/profile_name_text_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name_text"
        android:layout_below="@+id/name_text"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/circle"
        android:gravity="center"
        android:text="Level : 1"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"/>


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="35pt"
        android:layout_below="@id/circle"
        android:layout_marginTop="12dp"
        android:background="@color/guillotine_background_dark"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/wins"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/relative_child"
            android:layout_weight="1"
            android:text="Win : 100"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/profile_stat_text_size"
            android:textStyle="bold"/>

        <!--  android:theme=”CustomAccentOverlay”-->

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/freinds"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Freinds : 100"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/profile_stat_text_size"
            android:textStyle="bold"/>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/rank"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/freinds"
            android:layout_weight="1"
            android:text="Rank : 500"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/profile_stat_text_size"
            android:textStyle="bold"/>

    </LinearLayout>



    <Button
        android:id="@+id/play_g"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Play"
        android:textColor="@color/guillotine_background"
        android:textSize="25dp"
        android:textStyle="bold"
        android:theme="@style/WhiteRippleButton"
        />


    <ListView
        android:layout_above="@+id/play"
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/linear_layout"
        android:scrollbars="horizontal"
        ></ListView>


</RelativeLayout>
