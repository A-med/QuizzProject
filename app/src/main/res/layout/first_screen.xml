<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginTop="@dimen/dimen_90"
        android:src="@mipmap/service128"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="@dimen/dimen_10"
        android:src="@mipmap/education128"

        />

    <ImageView
        android:id="@+id/center_box"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/shape"

        >
    </ImageView>

    <RelativeLayout
        android:id="@+id/center_box_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="297dp"
        android:background="@color/dark_yellow"

        >
    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_70"
        android:layout_marginTop="@dimen/dimen_40"
        android:src="@mipmap/history128"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="@dimen/dimen_28"
        android:src="@mipmap/run"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_toStartOf="@+id/imageView4"
        android:src="@mipmap/brain128"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignRight="@+id/imageView2"
        android:src="@mipmap/graph_circle"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="@dimen/dimen_40"
        android:src="@mipmap/geography128"/>


    <RelativeLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center_box_frame"
        android:layout_marginTop="@dimen/dimen_30">


    </RelativeLayout>


    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center_box_frame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_50"
        android:text="@string/first_title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_26"
        />


    <TextView
        android:id="@+id/desc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_text"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="@string/first_desc"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_16"/>

</RelativeLayout>