<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.iit.quizzproject">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".TestActivity"/>







        <activity android:name=".AuthentificationActivity">

        </activity>

        <activity android:name=".SignInActivity">

        </activity>


        <activity android:name=".SignUpActivity">

        </activity>


        <activity
            android:name=".Activity.MainActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".QuestionActivity">



        </activity>




        <permission
            android:name="com.example.iit.quizzproject.database.permission.READ_DATABASE"
            android:protectionLevel="normal" />
        <permission
            android:name="com.example.iit.quizzproject.database.permission.WRITE_DATABASE"
            android:protectionLevel="normal" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
        <provider
            android:name=".database.TestContentProvider"
            android:authorities="com.example.iit.quizzproject.database.provider"
            android:readPermission="com.example.iit.quizzproject.database.permission.READ_DATABASE"
            android:writePermission="com.example.iit.quizzproject.database.permission.WRITE_DATABASE"
            android:exported="true"
            android:multiprocess="true" />


    </application>

</manifest>